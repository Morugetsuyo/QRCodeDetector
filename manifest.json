{
  "manifest_version": 3,
  "version": "3.0.1",
  "name": "QR Code Detector dev_ver-var OS compatible model",
  "description": "QR Code Detector dev_ver-var OS compatible model",
  "permissions": ["activeTab", "tabs", "storage", "contextMenus", "scripting"],
  "optional_permissions": [
    "declarativeNetRequestWithHostAccess",
    "sidePanel"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["js/jquery-3.7.1.min.js", "js/snipping.js", "popup/index.js", "js/QRCode.js", "web_worker.js", "js/zbar.js", "js/zbar.wasm"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["js/*", "popup/*"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true
    }
  ],
  "icons": {
    "16": "icons/icons.png",
    "32": "icons/icons.png",
    "48": "icons/icons.png",
    "128": "icons/icons.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}